<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingTop="56dp"
    android:paddingRight="24dp"
    tools:context=".profile">

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bangers"
        android:text="Servic Force BD"
        android:textColor="#42B04A"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="230dp"
        android:layout_height="2dp"
        android:layout_below="@+id/txtlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:background="#000" />

    <TextView
        android:id="@+id/stxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cookie"
        android:text="One Stop Service Center"
        android:textColor="#42B04A"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cookie"
        android:text="User Profile"
        android:textSize="30dip" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtsign"
        android:layout_centerHorizontal="true"
        android:onClick="showImage"
        android:src="@drawable/login_circle" />


    <TextView
        android:id="@+id/pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="User Name Here"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/pro_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="User Email Here"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/pro_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="User Contact Here"
        android:textSize="20dip" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Log out" />

</RelativeLayout>