<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/bangers"
            android:text="Servic Force BD"
            android:textColor="#42B04A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line"
            android:layout_width="230dp"
            android:layout_height="2dp"
            android:layout_below="@+id/txtlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:background="#000" />

        <TextView
            android:id="@+id/stxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/cookie"
            android:text="One Stop Service Center"
            android:textColor="#42B04A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/cookie"
            android:text="Sign up Form."
            android:textSize="30dip" />
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtsign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="Full Name"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="Phone No."
            android:inputType="textEmailAddress" />

        <!-- Email Label -->
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Password Label -->

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_email"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_sgnup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_password"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Register" />

        <TextView
            android:id="@+id/link_signin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_sgnup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Already Have a Account? Log in."
            android:textSize="16dip" />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/link_signin"
            android:visibility="invisible"/>

    </RelativeLayout>
</ScrollView>